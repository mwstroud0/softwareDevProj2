@model IEnumerable<Group11_iCLOTHINGApp.Models.SHOPPING_CART>

@{
    ViewBag.Title = "CustomerCart";
}

<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cartID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cartProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cartProductQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CUSTOMER.customerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRODUCT.brandID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cartID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cartProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cartProductQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CUSTOMER.customerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRODUCT.brandID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.cartID }) |
                @Html.ActionLink("Details", "Details", new { id = item.cartID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.cartID })
            </td>
        </tr>
    }

</table>
