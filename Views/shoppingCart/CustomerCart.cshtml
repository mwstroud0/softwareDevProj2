@using Group11_iCLOTHINGApp.Models;
@model Tuple< IEnumerable<ITEM>, SHOPPING_CART>

@{
    ViewBag.Title = "Customer Cart";
}

<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(tuple => tuple.Item1.First().productName)
        </th>
        <th>
            @Html.DisplayNameFor(tuple => tuple.Item1.First().itemQty)
        </th>
        <th>
            @Html.DisplayNameFor(tuple => tuple.Item1.First().brandID)
        </th>
        <th>
            @Html.DisplayNameFor(tuple => tuple.Item1.First().productDescription)
        </th>
        <th>

            @Html.DisplayNameFor(tuple => tuple.Item2.cartProductPrice)
        </th>
    </tr>
    @if (Model.Item1.Count() != 0)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Item1.First().productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Item1.First().itemQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Item1.First().brandID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Item1.First().productDescription)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => Model.Item2.cartProductPrice)
            </td>
            <td>
                @Html.ActionLink("+", "Increment", "shoppingCart")
                @Html.ActionLink("-", "Decrement", "shoppingCart")
            </td>
        </tr>
    }
    </table>
    <p>@ViewBag.Notification</p>
@if (Session["cartCount"] != null && (int)Session["cartCount"] != 0)
{
    <p>
        @Html.ActionLink("Check Out", "Index", "paymentInfo")
    </p>
}
